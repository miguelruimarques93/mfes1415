class DateTest
	instance variables
		d: Date := new Date(30, 1, 2010)

	operations

		private testLeapYear: () ==> ()
		testLeapYear() ==
		(
			Assert`assertTrue(Date`isLeapYear(2000));
			Assert`assertTrue(Date`isLeapYear(2004));
			Assert`assertFalse(Date`isLeapYear(2100));
			Assert`assertFalse(Date`isLeapYear(2001));
			
			IO`println(new Date(29, 2, 2000));
			IO`println(new Date(28, 2, 2001));
			IO`println(new Date(30, 4, 2001));
		);
		
		private testGetters : () ==> ()
		testGetters() == 
		(
			Assert`assertTrue(d.getDay() = 30);
			Assert`assertTrue(d.getMonth() = 1);
			Assert`assertTrue(d.getYear() = 2010);
		);
		
		private testComparators : () ==> ()
		testComparators() ==
		(
			let d1 : Date = new Date(1, 1, 2000), 
				  d2 : Date = new Date(1, 1, 2010) in (
				Assert`assertTrue(d1.isLessOrEqual(d2));
				Assert`assertTrue(d1.isLessOrEqual(d1));
				Assert`assertTrue(d2.isGreater(d1));
			);
		);
		
		public static main: () ==> ()
    main() ==
    (
    	let dt : DateTest = new DateTest() in (
      	dt.testLeapYear();
      	dt.testGetters();
      	dt.testComparators();
      );
    );

end DateTest
